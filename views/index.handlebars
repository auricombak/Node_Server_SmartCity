<h2 class="page-header">Portail de commerce</h2>
<p>Bienvenue dans votre interface de gestion de commerce</p>  

{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

{{#if username}}
        <div >{{username}}</div>
{{/if}}

{{#if id}} 
    <div class="alert alert-danger">{{id}}</div>
{{/if}}

<div class="modal-body row ">
  <div class="col-md-6 table-bordered">
    <h3 class="page-header">Ajouter un commerce :</h3>
    <form method="post" action="/">
        <div class="form-group">
            <label>Nom</label>
            <input type="text" class="form-control" placeholder="Nom" name="nom">
        </div>
        <div class="form-group">
            <label>Marque</label>
            <input type="text" class="form-control" placeholder="Marque" name="marque">
        </div>
        <div class="form-group">
            <label>Adresse</label>
            <div >
                <input type="text" class="form-control" placeholder="Adresse" name="adresse">
            </div> 
        </div>
        <div class="form-group">
            <label>Catégories</label>
            <p class="text-success">Séparez les catégories par des espaces </p>
            <textarea type="text" class="form-control"  placeholder="BMW|Moto|Mecanique ..." name="categorie"></textarea>
        </div>
        <button type="submit" class="btn btn-info">Ajouter</button>
    </form>
  </div>
  {{#if commerces}}
  
  <div class="col-md-6 table-bordered">
    <div>
        <h3 class="page-header">Supprimer un commerce :</h3>
        <form method="post" action="/delete">
            <div class="form-group">
                <label>Nom du commerce : </label>      
                <select class="form-control" name="select" id="sel1">
                    {{#each commerces}}
                        <option value={{_id}}>{{nom}}</option>
                    {{/each}}
                </select> 
            </div>             
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
  </div>
  <div style="margin-top: 1cm">
    <h3 class="page-header">Poster une offre :</h3>
        <form method="post" action="/offre">

            <div class="form-group">
                <label>Nom du commerce : </label>      
                <select class="form-control" name="select" id="sel1">
                    {{#each commerces}}
                        <option value={{_id}}>{{nom}}</option>
                    {{/each}}
                </select> 
            </div>

            <div class="form-group">
                <label>Titre</label>
            <div >
                <input type="text" class="form-control" placeholder="Titre du commerce" name="titre">
            </div> 
            
            <div class="form-group">
                <label>Description</label>
                <textarea type="text" class="form-control"  placeholder="Ecrivez votre message ici !" name="password"></textarea>
            </div>    

            <div class="form-group">
                <label>Tags</label>
                <p class="text-success">Séparez les préférences par des espaces </p>
                <textarea type="text" class="form-control"  placeholder="Mode Ete 50% ..." name="tags"></textarea>
            </div>

            <button type="submit" class="btn btn-success">Création de l'offre</button>
        </form>
    </div>
  </div>
{{/if}}


